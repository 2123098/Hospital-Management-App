<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_pic"
    tools:context=".WelcomeActivity">


    <!--   App logo  -->
    <ImageView
        android:id="@+id/app_logo"
        android:src="@drawable/icon"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginTop="165dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="none"/>


    <!--   App Name  -->
    <TextView
        android:id="@+id/app_name_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Management App"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_logo"/>



    <!-- Login button -->
    <Button
        android:id="@+id/loginButton_welcome"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="70dp"
        android:background="@color/black"
        android:textSize="23sp"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:layout_below="@id/app_name_welcome"/>


    <!-- Register button -->
    <Button
        android:id="@+id/registerButton_welcome"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textSize="20.5sp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Register with us"
        android:layout_below="@id/loginButton_welcome"/>

</RelativeLayout>