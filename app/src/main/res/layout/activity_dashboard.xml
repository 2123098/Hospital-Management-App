<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">



    <!-- App Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Management Dashboard"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Doctors Management -->
    <Button
        android:id="@+id/btn_Manage_Doctors"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Manage Doctors"
        android:textSize="19sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />


    <!-- Patients Management -->
    <Button
        android:id="@+id/btn_Manage_Patients"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Manage Patients"
        android:textSize="19sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Manage_Doctors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />


    <!-- Schedule Appointments -->
    <Button
        android:id="@+id/btn_schedule_appointment"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Schedule Appointments"
        android:textSize="19sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Manage_Patients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- View Appointments -->
    <Button
        android:id="@+id/btn_view_appointments"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="View Appointments"
        android:textSize="19sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_schedule_appointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>